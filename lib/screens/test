    <script>
        // Login/Register Tab Toggle
        const loginTabBtn = document.getElementById('loginTabBtn');
        const registerTabBtn = document.getElementById('registerTabBtn');
        const loginTab = document.getElementById('loginTab');
        const registerTab = document.getElementById('registerTab');
        
        loginTabBtn.addEventListener('click', () => {
            loginTabBtn.classList.add('border-blue-500', 'text-blue-600');
            registerTabBtn.classList.remove('border-blue-500', 'text-blue-600');
            registerTabBtn.classList.add('border-transparent', 'text-gray-500');
            loginTab.classList.remove('hidden');
            loginTab.classList.add('active');
            registerTab.classList.add('hidden');
            registerTab.classList.remove('active');
        });
        
        registerTabBtn.addEventListener('click', () => {
            registerTabBtn.classList.add('border-blue-500', 'text-blue-600');
            loginTabBtn.classList.remove('border-blue-500', 'text-blue-600');
            loginTabBtn.classList.add('border-transparent', 'text-gray-500');
            registerTab.classList.remove('hidden');
            registerTab.classList.add('active');
            loginTab.classList.add('hidden');
            loginTab.classList.remove('active');
        });
        
        // Login Button
        const loginBtn = document.getElementById('loginBtn');
        const registerBtn = document.getElementById('registerBtn');
        const loginScreen = document.getElementById('loginScreen');
        const mainScreen = document.getElementById('mainScreen');
        
        loginBtn.addEventListener('click', () => {
            loginScreen.classList.remove('active');
            mainScreen.classList.add('active');
        });
        
        registerBtn.addEventListener('click', () => {
            loginScreen.classList.remove('active');
            mainScreen.classList.add('active');
        });
        
        // Logout Button
        const logoutBtn = document.getElementById('logoutBtn');
        
        logoutBtn.addEventListener('click', () => {
            mainScreen.classList.remove('active');
            loginScreen.classList.add('active');
        });
        
        // Tab navigation
        const navItems = {
            homeNav: document.getElementById('homeNav'),
            profileNav: document.getElementById('profileNav'),
            accountNav: document.getElementById('accountNav'),
            settingsNav: document.getElementById('settingsNav')
        };
        
        const tabContents = {
            homeContent: document.getElementById('homeContent'),
            profileContent: document.getElementById('profileContent'),
            accountContent: document.getElementById('accountContent'),
            settingsContent: document.getElementById('settingsContent')
        };
        
        const homeButtons = document.getElementById('homeButtons');
        
        function setActiveTab(tabId) {
            // Reset all tabs
            Object.values(navItems).forEach(tab => {
                tab.classList.remove('active');
                tab.classList.add('text-gray-500');
            });
            
            // Reset all contents
            Object.values(tabContents).forEach(content => {
                content.classList.remove('active');
            });
            
            // Set active tab and content
            navItems[tabId].classList.add('active');
            navItems[tabId].classList.remove('text-gray-500');
            tabContents[tabId.replace('Nav', 'Content')].classList.add('active');
            
            // Show/hide floating buttons based on active tab
            if (tabId === 'homeNav') {
                homeButtons.style.display = 'flex';
            } else {
                homeButtons.style.display = 'none';
            }
        }
        
        // Add event listeners to tabs
        navItems.homeNav.addEventListener('click', () => setActiveTab('homeNav'));
        navItems.profileNav.addEventListener('click', () => setActiveTab('profileNav'));
        navItems.accountNav.addEventListener('click', () => setActiveTab('accountNav'));
        navItems.settingsNav.addEventListener('click', () => setActiveTab('settingsNav'));
        
        // Toggle pause button
        const pauseBtn = document.getElementById('pauseBtn');
        let isPaused = false;
        
        pauseBtn.addEventListener('click', () => {
            isPaused = !isPaused;
            if (isPaused) {
                pauseBtn.classList.remove('bg-red-500');
                pauseBtn.classList.add('bg-green-500');
                pauseBtn.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                `;
            } else {
                pauseBtn.classList.remove('bg-green-500');
                pauseBtn.classList.add('bg-red-500');
                pauseBtn.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                `;
            }
        });

        // Language selector
        const languageBtn = document.getElementById('languageBtn');
        const languageSelector = document.getElementById('languageSelector');
        const closeLanguageSelector = document.getElementById('closeLanguageSelector');
        
        languageBtn.addEventListener('click', () => {
            languageSelector.classList.add('show');
        });
        
        closeLanguageSelector.addEventListener('click', () => {
            languageSelector.classList.remove('show');
        });

        // Simulate gesture detection
        const gestures = [
            {
                icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3m0 0V11" />
                      </svg>`,
                text: "Hola, ¿cómo estás?"
            },
            {
                icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                      </svg>`,
                text: "Necesito información, por favor."
            },
            {
                icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>`,
                text: "Muchas gracias por tu ayuda."
            }
        ];
        
        // Initialize with home tab active
        setActiveTab('homeNav');
        
        // Simulate gesture detection when on home tab
        const gestureIcon = document.querySelector('.gesture-icon');
        let currentIndex = 0;
        
        setInterval(() => {
            if (tabContents.homeContent.classList.contains('active') && !isPaused) {
                currentIndex = (currentIndex + 1) % gestures.length;
                gestureIcon.innerHTML = gestures[currentIndex].icon;
                document.querySelector('.bg-blue-50 p-4 rounded-lg p').textContent = gestures[currentIndex].text;
                
                // Animation effect
                gestureIcon.classList.add('active');
                setTimeout(() => {
                    gestureIcon.classList.remove('active');
                }, 300);
            }
        }, 5000);
    </script>
